<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="4.5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ask_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ask Price :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/at"
                />

            <TextView
                android:id="@+id/at"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="At :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/ask_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/base_asset"
                />

            <TextView
                android:id="@+id/base_asset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Base Asset :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/at"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bid_price"
                />

            <TextView
                android:id="@+id/bid_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bid Price :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/base_asset"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/high_price"
                />

            <TextView
                android:id="@+id/high_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="High Price :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/bid_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/last_price"
                />

            <TextView
                android:id="@+id/last_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Last Price :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/high_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/low_price"
                />

            <TextView
                android:id="@+id/low_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Low Price :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/last_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/open_price"
                />

            <TextView
                android:id="@+id/open_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Open Price :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/low_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/quote_asset"
                />

            <TextView
                android:id="@+id/quote_asset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quote Asset :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/open_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/symbol"
                />

            <TextView
                android:id="@+id/symbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Symbol :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/quote_asset"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/volume"
                />

            <TextView
                android:id="@+id/volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Volume :"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/symbol"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>